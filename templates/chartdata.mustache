{{!
    @template block_feedbackbox/chartdata
}}
<div>
    <div class="canvas-graph-big">
        <canvas id="studchartblock"></canvas>
    </div>
    <div class="ratinggood">
        <div class="sectiontext">{{#str}}thiswasgood, block_feedbackbox{{/str}}:</div>
        <div class="topthree">
            {{#good}}
                <div>
                    <div>#{{id}}</div>
                    <span>{{name}}</span></div>
            {{/good}}
        </div>
    </div>
    <div class="ratingbad">
        <div class="sectiontext">{{#str}}thiswasbad, block_feedbackbox{{/str}}:</div>
        <div class="topthree">
            {{#bad}}
                <div>
                    <div>#{{id}}</div>
                    <span>{{name}}</span></div>
            {{/bad}}
        </div>
    </div>
    <div class="sectiontext"></div>
    <div class="turnus">
        {{#zone}}
            <b>{{#str}}round, block_feedbackbox{{/str}} {{id}}</b><br/>
            {{fromstr}} {{#str}}combineworduntil, block_feedbackbox{{/str}} {{tostr}}
        {{/zone}}
        <br/>
        {{#str}}participants, block_feedbackbox{{/str}} {{participants}} / {{totalparticipants}}
    </div>
    <div style="display: none" id="feedbackboxicons">
        {{#pix}}b/fb_4_hilfe, mod_feedbackbox, Icon{{/pix}}
        {{#pix}}b/fb_3_okay, mod_feedbackbox, Icon{{/pix}}
        {{#pix}}b/fb_2_laeuft, mod_feedbackbox, Icon{{/pix}}
        {{#pix}}b/fb_1_hyper, mod_feedbackbox, Icon{{/pix}}</div>
</div>